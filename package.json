{
  "name": "@codacy/design-system",
  "version": "1.0.2",
  "packageManager": "yarn@3.2.4",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "rm -rf dist && yarn build:esm && yarn build:cjs",
    "build:esm": "tsc --module esnext --outDir dist/esm && tsc-alias -p tsconfig.esm.json",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs && tsc-alias -p tsconfig.cjs.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "check": "yarn check:eslint && yarn check:types",
    "check:eslint": "eslint ./src --ignore-path .eslintignore",
    "check:types": "tsc --noEmit"
  },
  "peerDependencies": {
    "@emotion/is-prop-valid": "^1.2.0",
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@types/styled-system": "^5.1.15",
    "polished": "^4.2.2",
    "react": "^18.2.0",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@emotion/is-prop-valid": "^1.2.0",
    "@emotion/jest": "^11.10.8",
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.2.0",
    "@types/react": "^18.2.0",
    "@types/styled-system": "^5.1.15",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-mdx": "^2.0.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.2",
    "pinst": "^3.0.0",
    "polished": "^4.2.2",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-system": "^5.1.5",
    "ts-jest": "^29.1.0",
    "tsc-alias": "^1.8.6",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --ignore-path .eslintignore"
    ],
    "*.{md,mdx}": [
      "prettier --write"
    ]
  }
}
